<!--コメント一覧-->
<div class=" align-items-end">
 <% book.book_comments.each do |book_comment| %>
   <div><%= image_tag book_comment.user.get_profile_image, size:'100x100' %>
   <%= book_comment.comment %>
   <% if book_comment.user == current_user %>
       <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %><br>
   <% end %>

   <%= link_to book_comment.user.name, user_path(book_comment.user) %>
   </div>
 <% end %>
</div>